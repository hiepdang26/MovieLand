<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/black">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <!-- Nút back -->
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_background_circle_icon"
                android:padding="10dp"
                android:src="@drawable/icon_back_ios"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Tiêu đề -->
            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm quận/huyện"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Dropdown chọn Region -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khu vực"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:textStyle="italic"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txtRegionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textStyle="bold"/>
        <!-- Tên quận/huyện -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên quận/huyện"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:textStyle="italic"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/edtDistrictName"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edittext_default"
            android:padding="20dp"
            android:textSize="15sp"
            android:textColorHint="@color/white"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Nút lưu -->
        <Button
            android:id="@+id/btn_save_district"
            android:text="Lưu"
            android:layout_marginTop="30dp"
            android:textAllCaps="false"
            android:background="@drawable/rounded_purple_button"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
